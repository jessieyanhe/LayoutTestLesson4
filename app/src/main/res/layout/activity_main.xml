<?xml version="1.0" encoding="utf-8"?>
<s xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="bottom">

    <ImageButton
        android:id="@+id/tab_item_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_item_home_focus"
        android:layout_weight="1"
        android:background="#7fff"/>

    <ImageButton
        android:id="@+id/tab_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_item_category_focus"
        android:layout_weight="1"
        android:background="#7fff"/>

    <ImageButton
        android:id="@+id/tab_item_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_item_cart_focus"
        android:layout_weight="1"
        android:background="#7fff"/>

    <ImageButton
        android:id="@+id/tab_item_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_item_personal_focus"
        android:layout_weight="1"
        android:background="#7fff"/>
</s>